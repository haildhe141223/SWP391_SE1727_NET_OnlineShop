@using SWP391.OnlineShop.Core.Models.Enums;
@model List<SWP391.OnlineShop.ServiceModel.ViewModels.Settings.SliderViewModel>

<div class="m-headers ml-3" style="margin-top: 10% !important;">
    <h4 class="fw-bold">Slider Management</h4>
    <a asp-area="Managements" asp-controller="Marketing" asp-action="AddSlider">
        <button class="btn btn-primary">
            <span>Add</span>
            <i class="fa-regular fa-plus"></i>
        </button>
    </a>

</div>

<div class="card shadow mb-4 mt-3">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Posts DataTables</h6>
    </div>
    <div class="card-body container-fluid">
        <div class="table-responsive">
            <table class="table table-hover table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead class="table-secondary">
                    <tr>
                        <th scope="col">Title</th>
                        <th scope="col">Image</th>
                        <th scope="col">BackLink</th>
                        <th scope="col">Status</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var sliderViewModel in Model)
                    {
                        <tr>
                            <td>@sliderViewModel.Title</td>
                            <td><img width="300" height="300" src="@sliderViewModel.Image"></td>
                            <td>@sliderViewModel.BlackLink</td>
                            @if (sliderViewModel.Status == Status.Active)
                            {
                                <td class="text-success">Active</td>
                            }
                            else
                            {
                                <td class="text-danger">InActive</td>
                            }
                            <td>
                                <div class="table-action">
                                    <a asp-area="Managements" asp-controller="Marketing" asp-action="ViewSlider" asp-route-id="@sliderViewModel.Id">
                                        <i class="fa-regular fa-eye"></i>
                                    </a>
                                    <a asp-area="Managements" asp-controller="Marketing" asp-action="EditSlider" asp-route-id="@sliderViewModel.Id">
                                        <i class="fa-regular fa-pen-to-square text-primary"></i>
                                    </a>
                                    <a asp-area="Managements" asp-controller="Marketing" asp-action="DeleteSlider" asp-route-id="@sliderViewModel.Id">
                                        <i class="fa-regular fa-trash-can text-danger"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>