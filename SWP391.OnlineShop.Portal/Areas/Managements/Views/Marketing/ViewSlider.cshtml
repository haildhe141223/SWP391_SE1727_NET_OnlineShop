@model SWP391.OnlineShop.ServiceModel.ViewModels.Settings.SliderViewModel
@{
    var statusList = ViewData["StatusList"] as SelectList;
}
<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Slider Detail</h6>
    </div>
    <div class="card-body">
        <form style="margin:auto !important; width:60% !important">
            <div class="r-error my-4 text-danger text-center" asp-validation-summary="All">
            </div>
            <div class="mb-3">
                <label hidden asp-for="Id" class="form-label">Slider ID</label>
                <input hidden type="text" class="form-control" asp-for="Id">
            </div>
            <div class="mb-3">
                <label asp-for="Title" class="form-label">Title</label>
                <input disabled type="text" class="form-control" asp-for="Title">
                <span asp-validation-for="Title" class="r-error d-block text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ThumbnailFile" class="form-label">Image</label><br />
                <img width="300" height="300" src="@Model.Image" alt=""><br /><br />
                <span asp-validation-for="ThumbnailFile" class="r-error d-block text-danger"></span>
            </div>
            <div hidden class="mb-3">
                <label asp-for="Image" class="form-label"></label>
                <input disabled asp-for="Image" type="text" class="form-control" />
                <span asp-validation-for="Image" class="r-error d-block text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="BlackLink" class="form-label"></label>
                <input disabled asp-for="BlackLink" type="text" class="form-control" />
                <span asp-validation-for="BlackLink" class="r-error d-block text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Status" class="form-label">Status</label><br />
                <select disabled asp-for="Status" class="form-control" asp-items="@statusList"></select>
            </div>
            <br />
            <a type="button" class="btn btn-secondary" asp-action="">Back</a>
            <button asp-area="Managements" asp-controller="Marketing" asp-action="EditSlider" asp-route-id="@Model.Id" class="btn btn-primary">Edit</button>
            <button asp-area="Managements" asp-controller="Marketing" asp-action="DeleteSlider" asp-route-id="@Model.Id" class="btn btn-danger">Delete</button>
        </form>
    </div>
</div>