@using SWP391.OnlineShop.Core.Models.Enums;
@model List<SWP391.OnlineShop.ServiceModel.ViewModels.Products.ProductViewModel>

<div class="m-headers ml-3" style="margin-top: 10% !important;">
    <h4 class="fw-bold">Product Management</h4>
    <a asp-area="Managements" asp-controller="Marketing" asp-action="AddProduct">
        <button class="btn btn-primary">
            <span>Add</span>
            <i class="fa-regular fa-plus"></i>
        </button>
    </a>

</div>
<div class="card shadow mb-4 mt-3">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Products DataTables</h6>
    </div>
    <div class="card-body container-fluid">
        <div class="table-responsive">
            <table class="table table-hover table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead class="table-secondary">
                    <tr>
                        <th scope="col">Product Name</th>
                        <th scope="col">Image</th>
                        <th scope="col">Description</th>
                        <th scope="col">Amount</th>
                        <th scope="col">Price</th>
                        <th scope="col">Sale Price</th>
                        <th scope="col">Status</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var productViewModel in Model)
                    {
                        <tr>
                            <td>@productViewModel.ProductName</td>
                            <td><img width="300" height="300" src="@productViewModel.Thumbnail"></td>
                            <td>@productViewModel.Description</td>
                            <td>@productViewModel.Amount</td>
                            <td>@productViewModel.Price</td>
                            <td>@productViewModel.SalePrice</td>
                            @if (productViewModel.Status == Status.Active)
                            {
                                <td class="text-success">Active</td>
                            }
                            else
                            {
                                <td class="text-danger">InActive</td>
                            }
                            <td>
                                <div class="table-action">
                                    <a asp-area="Managements" asp-controller="Marketing" asp-action="ViewProduct" asp-route-id="@productViewModel.Id">
                                        <i class="fa-regular fa-eye"></i>
                                    </a>
                                    <a asp-area="Managements" asp-controller="Marketing" asp-action="EditProduct" asp-route-id="@productViewModel.Id">
                                        <i class="fa-regular fa-pen-to-square text-primary"></i>
                                    </a>
                                    <a asp-area="Managements" asp-controller="Marketing" asp-action="DeleteProduct" asp-route-id="@productViewModel.Id">
                                        <i class="fa-regular fa-trash-can text-danger"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>