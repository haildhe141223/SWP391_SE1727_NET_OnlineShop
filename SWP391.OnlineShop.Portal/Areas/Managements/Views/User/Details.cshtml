@{
}

<div class="user-container">
    <div class="user-header">
        <a asp-area="Managements" asp-action="Index" asp-controller="User" class="btn btn-outline-info">Back to user containers</a>
    </div>
    <div class="user-body">
        <div class="user-content">
            <div class="user-left">
                <form>
                    <div class="user-img">
                        <img src="~/template/img/settings/admins/anonymous_user.jpg" />
                    </div>
                    <div class="user-upload-img">
                        <input class="form-control" type="file" name="uploadAvatar">
                    </div>
                    <div class="user-gender">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="gender" id="genderMale">
                            <label class="form-check-label" for="genderMale">
                                Male
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="gender" id="genderFemale" checked>
                            <label class="form-check-label" for="genderFemale">
                                Female
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="gender" id="genderOther">
                            <label class="form-check-label" for="genderOther">
                                Other
                            </label>
                        </div>
                    </div>
                    <div class="user-role">
                        Roles: Admin
                    </div>
                    <button type="submit" class="btn btn-outline-primary">Submit</button>
                </form>
            </div>
            <div class="user-right">
                <div class="user-information">
                    <form>
                        <div class="mb-3">
                            <label class="form-label">Email address</label>
                            <input type="email" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Phone number</label>
                            <input type="password" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
                <div class="user-security">
                    <form>
                        <div class="mb-3">
                            <label class="form-label">Current Password</label>
                            <input type="password" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">New Password</label>
                            <input type="password" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Retype Password</label>
                            <input type="password" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-outline-primary">Submit</button>
                    </form>
                </div>
                <div>
                    <a class="btn btn-outline-info">User Addresses</a>
                </div>
            </div>
        </div>
    </div>
</div>