@using SWP391.OnlineShop.ServiceModel.ViewModels.Emails;
@model EmailContactViewModel
@{
}

<div class="m-headers" style="margin-top: 10% !important;">
    <h4 class="fw-bold ml-5">Contact Detail</h4>
</div>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Contact Detail</h6>
    </div>
    <div class="card-body">
        <form style="margin:auto !important; width:60% !important">
            <div class="r-error my-4 text-danger text-center" asp-validation-summary="All">
            </div>
            <div class="mb-3">
                <label asp-for="Subject" class="form-label">Subject</label>
                <input type="text" class="form-control" asp-for="Subject" readonly>
            </div>
            <div class="mb-3">
                <label asp-for="Title" class="form-label">Title</label>
                <input type="text" class="form-control" asp-for="Title" readonly>
            </div>
            <div class="mb-3">
                <label asp-for="Category" class="form-label">Category</label><br />
                <input type="text" class="form-control" asp-for="Category" readonly>
            </div>
            <div class="mb-3">
                <label asp-for="Body" class="form-label">Body</label><br />
                <textarea class="form-control" asp-for="Body" rows="3" readonly></textarea>
            </div>
        </form>
    </div>
</div>