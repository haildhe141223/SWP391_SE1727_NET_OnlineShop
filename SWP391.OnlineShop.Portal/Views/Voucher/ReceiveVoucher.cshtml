@using SWP391.OnlineShop.ServiceModel.ViewModels.Vouchers
@model List<VoucherViewModels>

<section class="banner-area organic-breadcrumb">
	<div class="container">
		<div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
			<div class="col-first">
				<h1>Shopping Cart</h1>
			</div>
		</div>
	</div>
</section>
<section class="cart_area">
	<div class="container">
		<div class="cart_inner">
			<div class="table-responsive">
				<table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
					<thead>
						<tr>
							<th class="th-sm">
								Voucher Code

							</th>
							<th class="th-sm">
								Voucher Name

							</th>
							<th class="th-sm">
								Voucher Type

							</th>
							<th class="th-sm">
								Voucher Value

							</th>
							<th class="th-sm">
								Action

							</th>
						</tr>
					</thead>
					<tbody>
						@if (Model != null && Model.Count > 0)
						{
							@foreach (var voucher in Model)
							{
								<tr>
									<td>@voucher.VoucherCode</td>
									<td>@voucher.VoucherName</td>
									<td>@voucher.Type</td>
									<td>@voucher.Value</td>
									<td>
										<button class="mx-1 btn btn-outline-info" onclick="SaveVoucher(this, @voucher.Id)">Save</button>
									</td>
								</tr>
							}
						}
						else
						{
							<tr>
								<td colspan="8">
									No Data
								</td>
							</tr>
						}
					</tbody>
					<tfoot>
						<tr>
							<th>
								Voucher Code
							</th>
							<th>
								Voucher Name
							</th>
							<th>
								Voucher Type
							</th>
							<th>
								Voucher Value
							</th>
							<th>
								Action
							</th>
						</tr>
					</tfoot>
				</table>
			</div>
		</div>
	</div>
</section>
<script type="text/javascript">
	$(document).ready(function () {
		$('#dtBasicExample').DataTable();
		$('.dataTables_length').addClass('bs-select');
	});

	function SaveVoucher(event, voucherId) {

		const data = {
			id: voucherId,
		};
		$.ajax({
			url: '@Url.Action("SaveVoucher","Voucher")',
			type: 'POST',
			data: data,
			success: function (response) {
				$.toaster({ priority: 'success', title: 'Created', message: "Save Voucher Succesfully" });
				event.setAttribute("disabled", true);
			},
			failure: function (failed) {
				$.toaster({ priority: 'warning', title: 'Warning', message: failed.responseText });
			},
			error: function (error) {
				$.toaster({ priority: 'danger', title: 'Error', message: error.responseText });
			}
		});
	}
</script>