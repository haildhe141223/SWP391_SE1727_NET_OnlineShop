@using SWP391.OnlineShop.Common.Enums;
@using SWP391.OnlineShop.ServiceModel.ViewModels.Profiles;
@{
    Layout = null;
    ViewBag.Title = "Karma Profile";
}

@model ProfileViewModels

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- require meta tag -->
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- title -->
    <title>@ViewBag.Title</title>
    <!-- bootstrap css -->
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/grid.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel="stylesheet" />
    <link rel="icon" type="image/x-icon" sizes="16x16" href="~/img/logo/favicon.ico">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
</head>
<body>
    <div>
        @RenderBody()
    </div>

    <!-- bootstrap js-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/c41956cca0.js" crossorigin="anonymous"></script>
    <script src="~/js/home.js" type="text/javascript"></script>

    <script type="text/javascript">
        $(".fas-name").click(function () {
            window.$("#edit-name").trigger('click');
        });

        $(".fas-mail").click(function () {
            window.$("#edit-mail").trigger('click');
        });

        $(".fas-gender").click(function () {
            window.$("#edit-gender").trigger('click');
        });

        $(".fas-phone").click(function () {
            window.$("#edit-phone").trigger('click');
        });

        $("#acc-del").click(function () {
            const x = confirm("Do you want to delete this account?");
            if (x) {
                return true;
            } else {
                return false;
            }
        });
    </script>


    @if (Model.RequestTab == ProfileTab.Address)
    {
        <script>
            $(".tab-content-item").removeClass('active');
            $(".tab-content-item").removeClass('show');
            $(".tab-header-items").removeClass('active');
            $("#v-pills-addr").addClass('active show');
            $("#tab-address").addClass('active');
        </script>
    }
    @if (Model.RequestTab == ProfileTab.Security)
    {
        <script>
            $(".tab-content-item").removeClass('active');
            $(".tab-content-item").removeClass('show');
            $(".tab-header-items").removeClass('active');
            $("#v-pills-security").addClass('active show');
            $("#tab-security").addClass('active');
        </script>
    }
</body>
</html>
