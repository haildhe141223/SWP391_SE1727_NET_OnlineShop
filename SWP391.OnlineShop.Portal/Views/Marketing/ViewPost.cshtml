@model SWP391.OnlineShop.ServiceModel.ViewModels.Products.PostViewModel
@{
    Layout = "_Layout";
    var genreList = ViewData["GenreList"] as SelectList;
    var statusList = ViewData["StatusList"] as SelectList;
}

<div class="m-headers" style="margin-top: 10% !important;">
    <h4 class="fw-bold ml-5">Manage Post</h4>
</div>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Post Detail</h6>
    </div>
    <div class="card-body">
        <form style="margin:auto !important; width:60% !important">
            <div class="r-error my-4 text-danger text-center" asp-validation-summary="All">
            </div>
            <div class="mb-3">
                <label asp-for="Title" class="form-label">Post Title</label>
                <input disabled type="text" class="form-control" asp-for="Title" id="name" onchange="changeUrl('name', 'url')">
                <span asp-validation-for="Title" class="r-error d-block text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ThumbnailFile" class="form-label">Thumbnail</label><br />
                <img width="300" height="300" src="@Model.Thumbnail"><br /><br />
                <span asp-validation-for="ThumbnailFile" class="r-error d-block text-danger"></span>
            </div>
            <div hidden class="mb-3">
                <label asp-for="Thumbnail" class="form-label"></label>
                <textarea asp-for="Thumbnail" type="text" class="form-control"></textarea>
                <span asp-validation-for="Thumbnail" class="r-error d-block text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea disabled id="ck-editor" rows="10" cols="80" asp-for="Description" type="text" class="form-control"></textarea>
                <span asp-validation-for="Description" class="r-error d-block text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Brief" class="form-label"></label>
                <input disabled asp-for="Brief" type="text" class="form-control" />
                <span asp-validation-for="Brief" class="r-error d-block text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Featured" class="form-label"></label>
                <input disabled asp-for="Featured" type="text" class="form-control" />
                <span asp-validation-for="Featured" class="r-error d-block text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Author" class="form-label"></label>
                <input disabled asp-for="Author" type="text" class="form-control" />
                <span asp-validation-for="Author" class="r-error d-block text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="CategoryId" class="form-label">Category</label><br />
                <select disabled asp-for="CategoryId" class="form-control" asp-items="@genreList"></select>
            </div><br /><br />
            <div class="mb-3">
                <label asp-for="Status" class="form-label">Status</label><br />
                <select disabled asp-for="Status" class="form-control" asp-items="@statusList"></select>
            </div><br />
            <a type="button" class="btn btn-secondary" asp-action="">Back</a>
            <button asp-controller="Marketing" asp-action="EditPost" asp-route-id="@Model.Id" class="btn btn-primary">Edit</button>
            <button asp-controller="Marketing" asp-action="DeletePost" asp-route-id="@Model.Id" class="btn btn-danger">Delete</button>
        </form>
    </div>
</div>

@section scripts{
    <script src="~/lib/ckeditor/ckeditor.js"></script>
    <script src="~/lib/ckeditor/adapters/jquery.js"></script>
    <script>
        $("#ck-editor").ckeditor();
    </script>
}