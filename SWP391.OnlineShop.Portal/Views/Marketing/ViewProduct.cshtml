@model SWP391.OnlineShop.ServiceModel.ViewModels.Products.ProductViewModel
@{
    Layout = "_Layout";
    var genreList = ViewData["GenreList"] as SelectList;
    var statusList = ViewData["StatusList"] as SelectList;
}

<div class="m-headers" style="margin-top: 10% !important;">
    <h4 class="fw-bold ml-5">Manage Product</h4>
</div>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Product Detail</h6>
    </div>
    <div class="card-body">
        <form style="margin:auto !important; width:60% !important">
            <div class="r-error my-4 text-danger text-center" asp-validation-summary="All">
            </div>
            <div class="mb-3">
                <label hidden asp-for="Id" class="form-label">Product ID</label>
                <input hidden type="text" class="form-control" asp-for="Id" id="name">
            </div>
            <div class="mb-3">
                <label asp-for="ProductName" class="form-label">Product Name</label>
                <input disabled type="text" class="form-control" asp-for="ProductName" id="name">
                <span asp-validation-for="ProductName" class="r-error d-block text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ThumbnailFile" class="form-label">Thumbnail</label><br />
                <img width="300" height="300" src="@Model.Thumbnail"><br /><br />
                <span asp-validation-for="ThumbnailFile" class="r-error d-block text-danger"></span>
            </div>
            <div hidden class="mb-3">
                <label asp-for="Thumbnail" class="form-label"></label>
                <input asp-for="Thumbnail" type="text" class="form-control" />
                <span asp-validation-for="Thumbnail" class="r-error d-block text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea disabled asp-for="Description" type="text" class="form-control"></textarea>
                <span asp-validation-for="Description" class="r-error d-block text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Amount" class="form-label"></label>
                <input disabled asp-for="Amount" type="number" min="1" class="form-control" />
                <span asp-validation-for="Amount" class="r-error d-block text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Price" class="form-label"></label>
                <input disabled asp-for="Price" type="text" class="form-control" />
                <span asp-validation-for="Price" class="r-error d-block text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="SalePrice" class="form-label"></label>
                <input disabled asp-for="SalePrice" type="text" class="form-control" />
                <span asp-validation-for="SalePrice" class="r-error d-block text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="CategoryId" class="form-label">Category</label><br />
                <select disabled asp-for="CategoryId" class="form-control" asp-items="@genreList"></select>
            </div><br /><br />
            <div class="mb-3">
                <label asp-for="Status" class="form-label">Status</label><br />
                <select disabled asp-for="Status" class="form-control" asp-items="@statusList"></select>
            </div><br />
            <a type="button" class="btn btn-secondary" asp-action="">Back</a>
            <button asp-controller="Marketing" asp-action="EditProduct" asp-route-id="@Model.Id" class="btn btn-primary">Edit</button>
            <button asp-controller="Marketing" asp-action="DeleteProduct" asp-route-id="@Model.Id" class="btn btn-danger">Delete</button>
        </form>
    </div>
</div>