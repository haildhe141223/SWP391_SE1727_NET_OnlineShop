<section class="related-product-area section_gap_bottom">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 text-center">
                <div class="section-title">
                    <h1>Deals of the Week</h1>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-9">
                <div class="row">
                    @if (Model.ProductsOfWeek != null)
                    {
                        @foreach (var productOfWeek in Model.ProductsOfWeek)
                        {
                            <div class="col-lg-4 col-md-4 col-sm-6 mb-20">
                                <div class="single-related-product d-flex">
                                    <a asp-action="Details" asp-controller="Product" asp-route-id="@productOfWeek.Id">
                                        <img src="@productOfWeek.Thumbnail" width="70" height="70" alt="">
                                    </a>
                                    <div class="desc">
                                        <a asp-action="Details" asp-controller="Product" asp-route-id="@productOfWeek.Id" class="title">
                                            @productOfWeek.ProductName
                                        </a>
                                        <div class="price">
                                            <h6>@productOfWeek.Price</h6>
                                            <h6 class="l-through">@productOfWeek.SalePrice</h6>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
            <div class="col-lg-3">
                <div class="ctg-right">
                    <a href="#" target="_blank">
                        <img class="img-fluid d-block mx-auto" src="~/template/img/category/c5.jpg" alt="">
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End related-product Area -->

<script type="text/javascript">
    function AddToCart(productId, productPrice) {
        const data = {
            productId: productId,
            price: productPrice,
            quantity: $('#sst').val(),
        };
        $.ajax({
            url: '@Url.Action("AddToCard","Cart")',
            type: 'POST',
            data: data,
            success: function (response) {
                $.toaster({ priority: 'success', title: 'Created', message: "Add To Cart Detail Successfully" });
                setTimeout(function () {
                    window.location.reload();
                }, 1000);
            },
            failure: function (failed) {
                alert(failed.responseText);
                //$.toaster({ priority: 'warning', title: 'Warning', message: failed.responseText });
            },
            error: function (error) {
                alert(error.responseText);
                //$.toaster({ priority: 'danger', title: 'Error', message: error.responseText });
            }
        });
    }
</script>